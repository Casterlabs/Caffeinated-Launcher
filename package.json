{
  "name": "Caffeinated",
  "version": "1.1.0",
  "license": "MIT",
  "author": "Casterlabs <support@casterlabs.co>",
  "main": "main.js",
  "repository": "https://github.com/Casterlabs/Caffeinated-Launcher",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron .",
    "pack": "electon-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "icon": "media/app_icon.icns",
    "appId": "casterlabs.caffeinated",
    "artifactName": "Caffeinated-${os}.${ext}",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "icon": "media/app_icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "guid": "29026c4f-ab6a-48b9-886e-101f3a7165f4",
      "oneClick": true,
      "perMachine": true,
      "shortcutName": "Caffeinated"
    }
  },
  "dependencies": {
    "decompress-zip": "^0.3.3",
    "electron-dl": "^3.0.2",
    "electron-store": "^6.0.1",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "electron-builder": "latest",
    "electron": "^v11.2.1"
  }
}
